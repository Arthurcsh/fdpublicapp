<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal" >

        <!-- 图片 -->
        <ImageView
            android:id="@+id/fd_student_meals_school_detail_picture_image"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ad_5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical" >

            <!-- 学校名称 -->
            <TextView
                android:id="@+id/fd_student_meals_school_detail_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:text="大同中学大同中学大同中学大同中学大同中学"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <!-- 学校区域 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fd_student_meals_school_detail_erea_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fd_student_meals_school_detail_erea_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="黄浦区"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 学校类型 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fd_student_meals_school_detail_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fd_student_meals_school_detail_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="中学"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
