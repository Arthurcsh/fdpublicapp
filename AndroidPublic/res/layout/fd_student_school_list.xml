<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grays"
    android:orientation="vertical" >

    <!-- 标题部分 -->

    <RelativeLayout
        android:id="@+id/fd_student_meals_search_school_list_title_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/main_header_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fd_student_meals_search_school_list_back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back_seletor" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/student_meals_nutrition_school_list_title"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 学校列表 -->

    <ListView
        android:id="@+id/fd_student_school_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/grays"
        android:dividerHeight="2dp"
        android:divider="@drawable/line"
        android:background="@color/white" />

</LinearLayout>