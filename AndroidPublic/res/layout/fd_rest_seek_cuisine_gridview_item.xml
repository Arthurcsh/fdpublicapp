<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" > 
    
    <RelativeLayout
        android:id="@+id/fd_rest_select_cuisine_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fd_rest_select_cuisine_item_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择推荐菜"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/fd_rest_comment_dish_select_bg" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fd_rest_cuisine_item_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:gravity="top|right"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/fd_rest_cuisine_item_selected_imageview"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/fd_usercenter_register_valid_ok" />
    </LinearLayout>

</RelativeLayout> 
