<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grays"
    android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/fd_usercenter_comments_dish_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:background="@drawable/fd_query_condition_content_bg" >
                <TextView
                    android:id="@+id/fd_usercenter_comments_dish_name_textview"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="肥牛卷"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/fd_usercenter_comments_company_name_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="棒约翰(徐家汇)"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" >
                <TextView
                    android:id="@+id/fd_usercenter_comments_dish_content_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:maxLines="6"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical"
                    android:padding="2dp" >
                    <com.wondersgroup.fdpublicapp.common.custom.FDHorizontalListView
                        android:id="@+id/fd_usercenter_comments_dish_imagelistView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fd_usercenter_comments_dish_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_below="@id/fd_usercenter_comments_dish_layout"
            android:background="@color/white"
            android:orientation="horizontal" >
            <TextView 
                android:id="@+id/fd_usercenter_comments_dish_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:maxLines="9"
                android:text="2013-12-22 19:00"
                android:textColor="@color/text_unselect"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/fd_usercenter_comments_dish_reply_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/fd_usercenter_comments_dish_reply_img"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/fd_comment_reply" />
                <TextView
                    android:id="@+id/fd_usercenter_comments_dish_reply_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:text="回复"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

        </LinearLayout>
        </LinearLayout>

</RelativeLayout>